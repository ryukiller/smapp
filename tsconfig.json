{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["dom", "es2021"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    /* Additional Checks */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "ts-toolbelt": ["node_modules/ts-toolbelt"]
    },
    "outDir": "dll"
  },
  "exclude": [
    "node_modules",
    "release",
    "desktop/main.prod.js",
    "desktop/renderer.prod.js",
    "dist/",
    "dll",
    "configs",
    "node",
    "scripts",
    "proto",
    "storybook-static",
    "test",
  ],
  "ts-node": {
    "esm": true
  }
}
